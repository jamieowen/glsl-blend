{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "outDir": "ast",
    "moduleResolution": "node",
    "lib": ["ES2017", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}
